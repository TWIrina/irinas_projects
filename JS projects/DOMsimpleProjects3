<div class="center">
<label id='curretnValue' for="buttonEx3">Ipsum</label>
  <button id='buttonEx3' onclick = "incCurrentVal()">+</button>
  <button onclick = "decCurrentVal()">-</button>
</div>
</body>

<script>
let currentValue=10;	
  function incCurrentVal() {
    currentValue++;
document.getElementById('curretnValue').innerHTML=currentValue;
    }        
   function decCurrentVal() {
     if(currentValue!=0)
    {
   	 currentValue--;
document.getElementById('curretnValue').innerHTML=currentValue;
		}
    }      
document.onload = document.getElementById('curretnValue').innerHTML=currentValue;
 </script> 

